extends ../layout

block content
	h1.
		Projekt ID #{project._id}
	form(action='/projects/#{project._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
		p Naziv:
			input#inputNaziv(type='text', value='#{project.naziv}', name='naziv')
		p Opis::
			input#inputOpis(type='text', value='#{project.opis}', name='opis')
		p Cijena:
			input#inputCijena(type='number', value='#{project.cijena}', name='cijena')
		p Clanovi:
			input#inputClanovi(type='text', value='#{project.clanovi}', name='clanovi')
		p Datum pocetka:
			input#inputDatumPocetka(type='date', name='datumPocetka', value='#{project.datumPocetka}')
		P Datum zavrsetka:
			input#inputDatumZavrsetka(type='date', name='datumZavrsetka', value='#{project.datumZavrsetka}')
		P Obavljeni Poslovi:
			input#inputObavljeniPoslovi(type='checkbox', name='obavljeniPoslovi', checked=('#{project.obavljeniPoslovi}'==='true' ? "checked" : undefined))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update